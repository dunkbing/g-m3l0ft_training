<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/LinearLayout01" 
				android:gravity="center" 
				android:layout_height="fill_parent"
				android:layout_width="fill_parent" 
				android:background="@color/background">
				<FrameLayout android:id="@+id/FrameLayout00"
							android:layout_height="fill_parent" 
							android:layout_width="fill_parent">
							<FrameLayout android:id="@+id/FrameLayoutDialog"
										android:layout_height="fill_parent" 
										android:layout_width="fill_parent" 
										android:paddingLeft="@dimen/ab_main_layout_padding" 
										android:paddingRight="@dimen/ab_main_layout_padding" 
										android:paddingTop="@dimen/ab_main_layout_padding_top">
														<LinearLayout android:id="@+id/LinearLayoutParent"
																		android:layout_width="fill_parent" 
																		android:orientation="vertical" 
																		android:layout_height="fill_parent">			
																		<LinearLayout android:layout_width="fill_parent" 
																						android:gravity="center" 
																						android:layout_height="wrap_content" 
																						android:id="@+id/LinearLayoutDialogTop">
																						<TextView android:layout_width="wrap_content"
																									android:layout_height="wrap_content"
																									android:id="@+id/lblDialogTop" 
																									android:text="@string/AB_CC_PURCHASE_WITH_CCARD" 
																									android:layout_gravity="center_horizontal|center"
																									android:typeface="normal" 
																									android:textSize="@dimen/ab_ccard_form_text_size">
																						</TextView>
																		</LinearLayout>
																		<LinearLayout android:layout_width="fill_parent" 
																						android:gravity="center" 
																						android:layout_height="@dimen/ab_separation_height" 
																						android:paddingLeft="@dimen/ab_separation_padding" 
																						android:paddingRight="@dimen/ab_separation_padding" 
																						android:background="@color/separation"
																						android:id="@+id/LinearLayoutSeparation">
																		</LinearLayout>				
																		<LinearLayout android:layout_width="fill_parent"
																							android:orientation="vertical" 
																							android:layout_height="wrap_content" 
																							android:id="@+id/LinearLayoutForm">
																						<TextView android:layout_height="wrap_content"
																									android:id="@+id/lblFormTop" 
																									android:text="@string/AB_CC_CREATE_ACCOUNT_ONE_CLICK" 
																									android:layout_gravity="center_horizontal|center" 
																									android:textStyle="bold" 
																									android:typeface="normal" 
																									android:layout_width="fill_parent" 
																									android:textSize="@dimen/ab_ccard_form_text_size">
																						</TextView>
																						<TableLayout android:id="@+id/TableLayoutForm" 
																											android:layout_height="wrap_content" 
																											android:layout_width="fill_parent">
																											<TableRow android:id="@+id/TableRowEmail"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<TextView android:id="@+id/lblEmail"
																																	android:layout_height="wrap_content"
																																	android:text="@string/AB_CC_EMAIL" 
																																	android:textSize="@dimen/ab_ccard_form_text_size"
																																	android:layout_gravity="left|center_vertical" 
																																	android:layout_width="wrap_content" 
																																	android:paddingLeft="@dimen/ab_form_padding_lr" 
																																	android:maxWidth="@dimen/ab_left_column_max_width"
																																	android:gravity="left">
																														</TextView>
																														<EditText android:id="@+id/etEmail"
																																	android:layout_height="@dimen/ab_EditText_height" 
																																	android:textSize="@dimen/ab_EditText_text_size" 
																																	android:inputType="textEmailAddress" 
																																	android:layout_width="fill_parent" 
																																	android:layout_weight="1">
																														</EditText>
																											</TableRow>
																											<TableRow android:id="@+id/TableRowPassword"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<TextView android:id="@+id/lblPassword"
																																	android:layout_width="wrap_content"
																																	android:layout_height="wrap_content"
																																	android:text="@string/AB_CC_PASSWORD"
																																	android:textSize="@dimen/ab_ccard_form_text_size" 
																																	android:paddingLeft="@dimen/ab_form_padding_lr" 
																																	android:layout_gravity="left|center_vertical"
																																	android:maxWidth="@dimen/ab_left_column_max_width"
																																	android:gravity="left">
																														</TextView>
																														<EditText android:id="@+id/etPassword"
																																	android:layout_width="fill_parent"
																																	android:layout_height="@dimen/ab_EditText_height" 
																																	android:textSize="@dimen/ab_EditText_text_size"
																																	android:inputType="textPassword"
																																	android:layout_weight="1">
																														</EditText>
																											</TableRow>
																											<TableRow android:id="@+id/TableRowName"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<TextView android:id="@+id/lblName"
																																	android:layout_width="wrap_content"
																																	android:layout_height="wrap_content"
																																	android:text="@string/AB_CC_NAME"
																																	android:textSize="@dimen/ab_ccard_form_text_size" 
																																	android:paddingLeft="@dimen/ab_form_padding_lr" 
																																	android:layout_gravity="left|center_vertical"
																																	android:maxWidth="@dimen/ab_left_column_max_width"
																																	android:gravity="left">
																														</TextView>
																														<EditText android:id="@+id/etName"
																																	android:layout_width="fill_parent"
																																	android:layout_height="@dimen/ab_EditText_height" 
																																	android:textSize="@dimen/ab_EditText_text_size"
																																	android:layout_weight="1" 
																																	android:inputType="textPersonName"
																																	android:nextFocusDown="@+id/etCardNumber1">
																														</EditText>
																											</TableRow>
																											<TableRow android:id="@+id/TableRowCardNumber"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<TextView android:id="@+id/lblCardNumber"
																																	android:layout_height="wrap_content"
																																	android:textSize="@dimen/ab_ccard_form_text_size" 
																																	android:layout_width="wrap_content"
																																	android:text="@string/AB_CC_CARD_NUMBER"
																																	android:layout_gravity="left|center_vertical" 
																																	android:paddingLeft="@dimen/ab_form_padding_lr" 
																																	android:maxWidth="@dimen/ab_left_column_max_width"
																																	android:gravity="left">
																														</TextView>
																														<LinearLayout android:layout_width="fill_parent"
																																		android:id="@+id/LinearLayoutCN"
																																		android:layout_height="wrap_content"
																																		android:orientation="horizontal" 
																																		android:layout_weight="1">
																																		<EditText android:id="@+id/etCardNumber1"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size" 
																																					android:layout_weight=".25" 
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height" 
																																					android:maxLength="4"
																																					android:nextFocusDown="@+id/etCardNumber2">
																																		</EditText>
																																		<EditText android:id="@+id/etCardNumber2"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size" 
																																					android:layout_weight=".25" 
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height" 
																																					android:maxLength="4"
																																					android:nextFocusDown="@+id/etCardNumber3">
																																		</EditText>
																																		<EditText android:id="@+id/etCardNumber3"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size" 
																																					android:layout_weight=".25"
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height"
																																					android:maxLength="4"
																																					android:nextFocusDown="@+id/etCardNumber4">
																																		</EditText>
																																		<EditText android:id="@+id/etCardNumber4"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size" 
																																					android:layout_weight=".25"
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height" 
																																					android:maxLength="4"
																																					android:nextFocusDown="@+id/etExpirationMonth">
																																		</EditText>
																														</LinearLayout>
																											</TableRow>
																											<TableRow android:id="@+id/TableRowExpiration"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<LinearLayout 	android:id="@+id/LinearLayoutExpirationText"
																																			android:layout_height="wrap_content"
																																			android:orientation="vertical" 
																																			android:layout_gravity="left|center_vertical" 
																																			android:layout_width="wrap_content">	
																																		<TextView android:id="@+id/lblExpiration"
																																					android:layout_height="wrap_content"
																																					android:textSize="@dimen/ab_ccard_form_text_size" 
																																					android:layout_width="wrap_content" 
																																					android:maxLines="1" 
																																					android:text="@string/AB_CC_EXPIRATION_DATE"
																																					android:paddingLeft="@dimen/ab_form_padding_lr" 
																																					android:paddingRight="@dimen/ab_textview_min_padding" 
																																					android:layout_gravity="left|center_vertical"
																																					android:maxWidth="@dimen/ab_left_column_max_width"
																																					android:gravity="left">
																																		</TextView>
																																		<TextView android:id="@+id/lblExpirationHelp" 
																																					android:layout_height="wrap_content" 
																																					android:text="@string/AB_CC_EXPIRATION_DATE_FORMAT" 
																																					android:layout_width="wrap_content" 
																																					android:layout_gravity="center_vertical"
																																					android:maxLines="1" 
																																					android:textSize="8sp" 
																																					android:gravity="center">
																																		</TextView>	
																														</LinearLayout>
																														<LinearLayout android:layout_width="fill_parent"
																																		android:id="@+id/LinearLayoutED"
																																		android:layout_height="wrap_content"
																																		android:orientation="horizontal"
																																		android:paddingRight="@dimen/ab_expiration_padding_r"  
																																		android:layout_weight="1">
																																		<EditText android:id="@+id/etExpirationMonth"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size"
																																					android:layout_weight=".5"  
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height" 
																																					android:maxLength="2"
																																					android:nextFocusDown="@+id/etExpirationYear">
																																		</EditText>
																																		<EditText android:id="@+id/etExpirationYear"
																																					android:layout_width="wrap_content"
																																					android:textSize="@dimen/ab_EditText_text_size" 
																																					android:layout_weight=".5" 
																																					android:inputType="number"
																																					android:layout_height="@dimen/ab_EditText_height" 
																																					android:maxLength="4">
																																		</EditText>
																														</LinearLayout>
																											</TableRow>
																											<TableRow android:id="@+id/TableRowSecureCode"
																														android:layout_width="wrap_content" 
																														android:layout_height="wrap_content">
																														<TextView android:id="@+id/lblSecureCode"
																																			android:layout_height="wrap_content"
																																			android:textSize="@dimen/ab_ccard_form_text_size" 
																																			android:layout_width="wrap_content" 
																																			android:text="@string/AB_CC_SECURE_CODE"
																																			android:layout_gravity="left|center_vertical" 
																																			android:paddingLeft="@dimen/ab_form_padding_lr"
																																			android:maxWidth="@dimen/ab_left_column_max_width"
																																			android:gravity="left">
																														</TextView>
																														<LinearLayout android:id="@+id/LinearLayoutSecureCode"
																																			android:layout_height="wrap_content"
																																			android:orientation="horizontal" 
																																			android:layout_width="fill_parent" 
																																			android:layout_weight="1">
																																<EditText android:id="@+id/etSecureCode"
																																			android:textSize="@dimen/ab_EditText_text_size" 
																																			android:layout_height="@dimen/ab_EditText_height" 
																																			android:inputType="textPassword|number"
																																			android:layout_width="@dimen/ab_secure_code_width" 
																																			android:maxLength="3">
																																</EditText>
																																<TextView android:id="@+id/lblSecureCodeHelp" 
																																			android:layout_height="wrap_content" 
																																			android:textSize="@dimen/ab_ccard_help_text_size" 
																																			android:text="@string/AB_CC_SECURE_CODE_HELP" 
																																			android:layout_width="fill_parent" 
																																			android:layout_gravity="center_vertical" 
																																			android:gravity="left" 
																																			android:paddingLeft="@dimen/ab_textview_min_padding" 
																																			android:paddingRight="@dimen/ab_textview_min_padding" 
																																			android:maxLines="2">
																																</TextView>	
																														</LinearLayout>
																											</TableRow>
																						</TableLayout>
																						<RelativeLayout android:id="@+id/LinearLayoutButtonBuyNow"
																										android:layout_height="wrap_content"
																										android:layout_width="fill_parent"
																										android:layout_gravity="center">
																										<Button android:text="@string/SKB_BUY_NOW" 
																													android:id="@+id/bt_ly_create_new_account_buy_now" 
																													android:layout_width="wrap_content"
																													android:textSize="@dimen/ab_button_text_size" 
																													android:layout_gravity="center" 
																													android:minWidth="@dimen/ab_large_button_width"
																													android:layout_height="@dimen/ab_cc_button_height" 
																													android:layout_centerHorizontal="true">
																										</Button>
																										<ImageView android:layout_width="wrap_content"
																													android:layout_height="wrap_content"
																													android:src="@drawable/ab_lock" 
																													android:id="@+id/ImageViewLock" 
																													android:layout_gravity="center" 
																													android:layout_toRightOf="@+id/bt_ly_create_new_account_buy_now" 
																													android:layout_centerVertical="true">
																										</ImageView>
																						</RelativeLayout>
																														
																		</LinearLayout>
																		<LinearLayout android:layout_width="fill_parent" 
																						android:gravity="center" 
																						android:layout_height="@dimen/ab_separation_height" 
																						android:paddingLeft="@dimen/ab_separation_padding" 
																						android:paddingRight="@dimen/ab_separation_padding" 
																						android:background="@color/separation"
																						android:id="@+id/LinearLayoutSeparation">
																		</LinearLayout>
																		<LinearLayout android:layout_width="fill_parent" 
																						android:orientation="vertical" 
																						android:id="@+id/LinearLayoutGLAccount" 
																						android:layout_height="wrap_content">
																						<TextView android:id="@+id/lblGLAccount" 
																									android:layout_height="wrap_content" 
																									android:textSize="@dimen/ab_ccard_form_aux_text_size" 
																									android:layout_width="wrap_content" 
																									android:maxLines="1" 
																									android:text="@string/AB_CC_ALREADY_HAS_ACCOUNT" 
																									android:layout_gravity="center">
																						</TextView>
																						<Button android:text="@string/SKB_LOGIN" 
																									android:id="@+id/bt_ly_create_new_account_login" 
																									android:layout_width="wrap_content" 
																									android:layout_height="@dimen/ab_cc_button_height" 
																									android:textSize="@dimen/ab_button_text_size" 
																									android:layout_gravity="center" 
																									android:minWidth="@dimen/ab_large_button_width">
																						</Button>
																		</LinearLayout>
																		<LinearLayout android:layout_width="fill_parent" 
																						android:gravity="center" 
																						android:layout_height="@dimen/ab_separation_height" 
																						android:paddingLeft="@dimen/ab_separation_padding" 
																						android:paddingRight="@dimen/ab_separation_padding" 
																						android:background="@color/separation"
																						android:id="@+id/LinearLayoutSeparation">
																		</LinearLayout>	
																		<LinearLayout android:layout_width="fill_parent" 
																						android:orientation="vertical" 
																						android:id="@+id/LinearLayoutNoGLAccount" 
																						android:layout_height="wrap_content">
																						<TextView android:id="@+id/lblNoGLAccount"
																									android:layout_height="wrap_content"
																									android:textSize="@dimen/ab_ccard_form_aux_text_size" 
																									android:layout_width="wrap_content" 
																									android:maxLines="1" 
																									android:text="@string/AB_CC_PAY_WO_ACCOUNT" 
																									android:layout_gravity="center">
																						</TextView>
																						
																						<Button android:text="@string/SKB_PAY_WO_ACCOUNT" 
																									android:id="@+id/bt_ly_create_new_account_pay_wo_account" 
																									android:layout_width="wrap_content" 
																									android:textSize="@dimen/ab_button_text_size" 
																									android:layout_height="@dimen/ab_cc_button_height" 
																									android:layout_gravity="center" 
																									android:minWidth="@dimen/ab_large_button_width">
																						</Button>
																		</LinearLayout>
																		<RelativeLayout android:layout_width="fill_parent" 
																						android:id="@+id/RelativeLayoutBottomMsg" 
																						android:gravity="bottom" 
																						android:layout_height="wrap_content">
																						<LinearLayout android:id="@+id/LinearLayoutBottomMsg"
																										android:layout_height="wrap_content"
																										android:orientation="vertical" 
																										android:layout_width="fill_parent" 
																										android:layout_alignParentBottom="true">
																										<RelativeLayout android:id="@+id/RelativeLayoutButtons" 
																														android:layout_height="wrap_content" 
																														android:layout_width="fill_parent">
																														<Button android:text="@string/SKB_TCS" 
																																	android:id="@+id/bt_ly_create_new_account_tcs" 
																																	android:layout_width="wrap_content" 
																																	android:textSize="@dimen/ab_button_tcs_text_size" 
																																	android:layout_height="@dimen/ab_cc_button_height">
																														</Button>
																														<Button android:text="@string/SKB_EXIT" 
																																	android:id="@+id/bt_ly_create_new_account_exit" 
																																	android:layout_width="wrap_content" 
																																	android:layout_height="@dimen/ab_cc_button_height" 
																																	android:layout_alignParentRight="true" 
																																	android:textSize="@dimen/ab_button_text_size"
																																	android:minWidth="@dimen/ab_small_button_width">
																														</Button>
																										</RelativeLayout>
																										<LinearLayout android:layout_width="fill_parent" 
																													android:gravity="center" 
																													android:layout_height="@dimen/ab_separation_height" 
																													android:paddingLeft="@dimen/ab_separation_padding" 
																													android:paddingRight="@dimen/ab_separation_padding" 
																													android:background="@color/separation"
																													android:id="@+id/LinearLayoutSeparation">
																										</LinearLayout>
																										<TextView android:id="@+id/lblBottomMsg"
																													android:layout_height="wrap_content"
																													android:textSize="@dimen/ab_bottom_msg_text_size"
																													android:layout_width="wrap_content" 
																													android:text="@string/AB_CC_GL_PEACE_OF_MIND" 
																													android:paddingLeft="@dimen/ab_textview_min_padding"
																													android:paddingRight="@dimen/ab_textview_min_padding"
																													android:gravity="left">
																										</TextView>
																						</LinearLayout>
																		</RelativeLayout>
														</LinearLayout>	
							</FrameLayout>
							<FrameLayout android:id="@+id/FrameLayoutHeader"
										android:layout_width="fill_parent" 
										android:layout_gravity="top"
										android:background="@drawable/ab_top_bar" 
										android:layout_height="@dimen/ab_tittle_bar_size_h">
										<ImageView android:id="@+id/ImageViewGLLogo"
													android:layout_width="wrap_content"
													android:layout_height="wrap_content"
													android:src="@drawable/ab_logo_tittle_horiz"
													android:paddingTop="@dimen/ab_logo_tittle_gap"
													android:paddingLeft="@dimen/ab_logo_tittle_gap">
										</ImageView>
										<ImageView android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:paddingTop="@dimen/ab_logo_tittle_gap"
											android:paddingRight="@dimen/ab_logo_tittle_gap" 
											android:src="@drawable/ab_logo_creditcards" 
											android:id="@+id/ImageViewCCLogos" 
											android:layout_gravity="right">
										</ImageView>
							</FrameLayout>
				</FrameLayout>
</LinearLayout>
