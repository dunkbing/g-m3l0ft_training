<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GameTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="GameDescription" parent="@android:style/TextAppearance.Small">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#393839</item>
        <item name="android:maxWidth">250px</item>
        <item name="android:maxLines">2</item>
    </style>
    
    <style name="DeviceText" parent="@android:style/TextAppearance.Small">
    	<item name="android:textColor">#666666</item>
    	<item name="android:minLines">2</item>
    </style>
</resources>
