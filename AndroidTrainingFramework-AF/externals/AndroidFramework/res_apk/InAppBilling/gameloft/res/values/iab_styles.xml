<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="iab_Widget.Button" parent="android:Widget.Button"> 
     	<item name="android:typeface">sans</item>
     	<item name="android:textSize">@dimen/iab_button_text_size</item>
     	<item name="android:textStyle">bold</item>
     	<item name="android:textColor">@color/iab_button_text</item>
     	<item name="android:layout_width">@dimen/iab_button_width</item>
     	<item name="android:layout_height">wrap_content</item>
     	<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>     	
     	<item name="android:layout_gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:minWidth">@dimen/iab_button_width</item>
	</style> 
	<style name="iab_Widget.ButtonSoftkey" parent="android:Widget.Button">
     	<item name="android:layout_gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>  
	</style>
	<style name="iab_Widget.TextView" parent="android:Widget.TextView">
		<item name="android:typeface">normal</item><!--  normal, sans, serif, monospace -->
		<item name="android:textSize">@dimen/iab_text_size</item>
		<item name="android:paddingLeft">@dimen/iab_textview_padding_lr</item>
		<item name="android:paddingRight">@dimen/iab_textview_padding_lr</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/iab_button_text</item>
	</style>
	<style name="iab_Widget.TextViewTittle" parent="android:Widget.TextView">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">@dimen/iab_text_tittle_size</item>
		<item name="android:paddingTop">1dp</item>
		<item name="android:paddingBottom">1dp</item>
		<item name="android:paddingLeft">@dimen/iab_textview_padding_lr</item>
		<item name="android:paddingRight">@dimen/iab_textview_padding_lr</item>
		<item name="android:textStyle">bold</item>
     	<item name="android:textColor">@color/iab_tittle_text</item>
	</style>
</resources>
