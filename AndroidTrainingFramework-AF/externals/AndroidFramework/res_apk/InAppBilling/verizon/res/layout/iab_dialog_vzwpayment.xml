<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:paddingLeft="10px"
	android:paddingTop="10px"
	android:paddingRight="10px"
	android:paddingBottom="10px">
  <FrameLayout android:id="@+id/frameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="35dip"
    android:background="#95C400">
	<TextView android:layout_height="wrap_content"
      android:layout_width="wrap_content"
	  android:textStyle="bold"
      android:text="@string/app_name"
      android:gravity="center"
	  android:paddingLeft="10px"
	  android:paddingTop="10px"
      android:textColor="#FFFFFF"
      android:id="@+id/txtAppName"
      android:layout_alignParentLeft="true">
    </TextView>
  </FrameLayout>
  <RelativeLayout android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:id="@+id/itemspricelayout"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginBottom="3dip"
    android:layout_marginTop="5dip">
    <TextView android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="N ITEM FOR"
      android:gravity="center"
      android:textColor="#000000"
      android:id="@+id/txtVItemInfo"
      android:layout_alignParentLeft="true">
    </TextView>
  </RelativeLayout>
  <RelativeLayout android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:id="@+id/itemsdescriptionlayout"
    android:gravity="left"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginBottom="3dip"
    android:layout_marginTop="5dip">
    <TextView android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="ITEM DESCRIPTION"
      android:gravity="center"
      android:textColor="#000000"
      android:id="@+id/txtVItemDescription"
      android:layout_alignParentLeft="true">
    </TextView>
  </RelativeLayout>
  <RelativeLayout android:layout_width="fill_parent"
    android:id="@+id/totalpriceLayout"
    android:layout_marginBottom="10dip"
    android:gravity="center"
    android:background="#8E8E8E"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
      android:textColor="#000"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/txtVTotal"
      android:text="Total: ">
    </TextView>
    <TextView android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:text="PRICE"
      android:textColor="#000000"
      android:id="@+id/txtVPriceTotal"
      android:layout_alignParentRight="true">
    </TextView>
  </RelativeLayout>
  	<TextView android:layout_height="wrap_content"
      android:layout_marginTop="40dip"
	  android:textStyle="bold"
      android:layout_width="wrap_content"
      android:text="@string/IAB_VZW_INFO"
      android:textColor="#000000"
      android:id="@+id/txtVWInfo"
	  android:layout_marginLeft="10dip"
	  android:layout_marginRight="10dip"
      android:layout_alignParentRight="true">
    </TextView>
  <FrameLayout android:id="@+id/frameLayout2"
    android:layout_width="fill_parent"
    android:layout_marginTop="2dip"
    android:background="@drawable/iab_button_gradient"
    android:layout_height="60dip">
    <Button android:text="Buy Now"
      android:textStyle="bold"
      android:id="@+id/BuyButton"
      android:layout_gravity="center_vertical|center_horizontal"
      android:layout_marginTop="2dip"
      android:layout_height="40dip"
      android:layout_width="145dip">
    </Button>
  </FrameLayout>
</LinearLayout>
