<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gifting_popup_frame_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="0px"
			android:layout_weight=".35"
    	/>	
    
    <LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="0px"
			android:layout_weight=".30"
      >
      
        <LinearLayout
    	    android:layout_width="0px"
         	android:layout_height="fill_parent"
    			android:layout_weight=".08"
        />
        
        <LinearLayout
    	    android:layout_width="0px"
        	android:layout_height="fill_parent"
    			android:layout_weight=".84"
    			android:background="@drawable/gifting_header"
        >
        
        	<ImageView
        	  android:id="@+id/gifting_popup_ok_button"
        		android:layout_width="wrap_content"
        		android:layout_height="fill_parent"
        		android:layout_marginTop="10dip"
        		android:layout_marginBottom="10dip"
        		android:layout_marginLeft="20dip"
        		android:layout_marginRight="10dip"
        		android:gravity="center"
        		android:background="@drawable/gifting_ok"
        	/>
    			<TextView
    				android:id="@+id/gifting_popup_text" 
    				android:layout_height="fill_parent" 
    				android:layout_width="fill_parent"
    				android:paddingLeft="10dip"
            android:paddingRight="10dip"
    				android:paddingTop="10dip"
            android:paddingBottom="10dip"
    				android:gravity="center_vertical|center_horizontal" 
    				android:text="@string/kddi_popup_message" 
    				android:textColor="#ffffffff" 
    			/>
  			</LinearLayout>
  			
  	    <LinearLayout
  	      android:layout_width="0px"
        	android:layout_height="fill_parent"
    			android:layout_weight=".08"
        />
  			
      </LinearLayout>
			
    <LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="0px"
			android:layout_weight=".35"
    	/>	

</LinearLayout>