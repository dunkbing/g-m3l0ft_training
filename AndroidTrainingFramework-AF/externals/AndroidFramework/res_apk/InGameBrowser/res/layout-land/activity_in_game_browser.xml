<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/ingamebrowser_mview"
    tools:context=".InGameBrowser" >
    
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@android:color/black" >
	
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.1"
			android:layout_margin="1dp"
			android:background="#c3c3c3" >
			
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentLeft="true"
				android:src="@drawable/navigation_cancel"
				android:id="@+id/ingamebrowser_closebutton"
				android:background="@android:color/transparent"
				android:scaleType="centerInside" />      
			
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.8"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:id="@+id/ingamebrowser_webview"
			android:background="@android:color/white" />
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.1"
			android:layout_margin="1dp"
			android:background="#c3c3c3" >
			
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentLeft="true"
				android:paddingRight="5dp"
				android:src="@drawable/navigation_back"
				android:id="@+id/ingamebrowser_backbutton"
				android:background="@android:color/transparent"
				android:scaleType="centerInside" />
			
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/ingamebrowser_backbutton"
				android:src="@drawable/navigation_forward"
				android:id="@+id/ingamebrowser_forwardbutton"
				android:background="@android:color/transparent"
				android:scaleType="centerInside" />
			
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentRight="true"
				android:background="@android:color/transparent"
				android:src="@drawable/navigation_refresh"
				android:id="@+id/ingamebrowser_refreshbutton"
				android:scaleType="centerInside" />
			
		</RelativeLayout>
	
	</LinearLayout>

</RelativeLayout>
