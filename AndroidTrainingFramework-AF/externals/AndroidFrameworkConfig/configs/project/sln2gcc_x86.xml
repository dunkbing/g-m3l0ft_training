        <!--INCLUDE_PATHS:     Specify the paths where the headers are searched 
                    Do not use paths with space in it.
                    Separators: ';' space or new line -->                            
        <Macro Name="INCLUDE_PATHS" Value="../../../include;
											../../../;" />
                                            
        <!--LINK_PATHS: Specify the paths where the to search the libraries specified in LDLIBS
                        Do not use paths with space in it.
                        Separators: ';' space or new line -->                                                        
            <Macro Name="LINK_PATHS" 	Value=" $(ANDROID_NDK_PATH)\sources\cxx-stl\gnu-libstdc++\$(TOOLCHAIN_VERSION)\libs\x86\
												$(ANDROID_NDK_PATH)\toolchains\$(TOOLCHAIN_FOLDERNAME)\prebuilt\windows\lib\gcc\i686-linux-android\$(TOOLCHAIN_VERSION)\
												$(ANDROID_NDK_PATH)\platforms\$(ANDROID_PLATFORM)\arch-x86\usr\lib\
												$(ANDROID_NDK_PATH)\toolchains\$(TOOLCHAIN_FOLDERNAME)\prebuilt\windows\i686-linux-android\lib\" />
        
        <!--CFLAGS: this is mandatory and it is very important. You can see here CommonValue, DebugValue and ReleaseValue. 
